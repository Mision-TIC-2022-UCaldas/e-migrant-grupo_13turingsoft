@page
@using E_Migrant.App.Dominio.Entidades
@model E_Migrant.App.Frontend.Pages.Migrantes.CrearMigranteModel
@{
}
<h1>Registrar un nuevo migrante</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="persona.Nombres"></label>
        <input asp-for="persona.Nombres" class="form-control" required="requerided">
    </div>
    
    <div class="form-group">
        <label asp-for="persona.Apelidos"></label>
        <input asp-for="persona.Apelidos" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.TipoDocumento">Tipo de documento</label>
        <select asp-for="persona.TipoDocumento" asp-items="Html.GetEnumSelectList<TipoDocumento>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="persona.Documento"></label>
        <input asp-for="persona.Documento" class="form-control" required="requerided">
    </div>
    <div class="form-group">
        <label asp-for="persona.PaisOrigen">Pais de origen</label>
        <input asp-for="persona.PaisOrigen" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.FechaNacimiento">Fecha de nacimiento</label>
        <input asp-for="persona.FechaNacimiento" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Email">Email</label>
        <input asp-for="persona.Email" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Telefono">Número de telefono</label>
        <input asp-for="persona.Telefono" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Direccion">Direccion</label>
        <input asp-for="persona.Direccion" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.Ciudad"></label>
        <input asp-for="persona.Ciudad" class="form-control" required="requerided">
    </div>

    <div class="form-group">
        <label asp-for="persona.SituacionLaboral">Tipo de documento</label>
        <select asp-for="persona.SituacionLaboral" asp-items="Html.GetEnumSelectList<SituacionLaboral>()" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>

</form>